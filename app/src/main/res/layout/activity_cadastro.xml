<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.cadastro.CadastroActivity"
    android:orientation="vertical" >



    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".activity.login.LoginActivity"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TxtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome" />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="16"
            android:inputType="textEmailAddress" />

    </LinearLayout>



    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".activity.login.LoginActivity"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TxtNovoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login" />

        <EditText
            android:id="@+id/editNovoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="17"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".activity.login.LoginActivity"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TxtNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha" />

        <EditText
            android:id="@+id/editNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="16"
            android:inputType="textPassword" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".activity.login.LoginActivity"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TxtConfirNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirme a Senha" />

        <EditText
            android:id="@+id/editConfirNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".activity.login.LoginActivity"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginLeft="150dp"
            android:text="Cadastrar" />


    </LinearLayout >
</LinearLayout>
